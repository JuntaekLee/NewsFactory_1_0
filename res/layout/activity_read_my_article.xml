<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/my_article_image"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SlidingDrawer
        android:id="@+id/read_article_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:content="@+id/drawer_content"
        android:layout_gravity="center_horizontal"
        android:handle="@+id/drawer_handle"

        android:topOffset="530dp" >

        <ImageView
            android:id="@+id/drawer_handle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/handle_up" />

        <LinearLayout
            android:id="@+id/drawer_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button 
                android:id="@+id/exit_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
               android:background="@drawable/write_article_exit_btn_selector"
                />
            <Button
                android:id="@+id/delete_article_btn"
                android:layout_width="0dp"
                 android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/delete_article_btn_selector" />

            <Button
                android:id="@+id/modify_btn"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/modify_article_btn_selector" />
        </LinearLayout>
    </SlidingDrawer>

</FrameLayout>