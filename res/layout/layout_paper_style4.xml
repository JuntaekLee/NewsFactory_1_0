<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="360dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="32dp"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/main_title1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/main_title1"
        android:focusableInTouchMode="false"
        android:inputType="text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/content_layout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/sub_title1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/sub_title3"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/text_content2"
                android:focusableInTouchMode="false"
                android:gravity="left|top"
                android:lineSpacingExtra="2.06dp"
                android:inputType="textMultiLine"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_layout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_photo1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />

            <EditText
                android:id="@+id/sub_title2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/sub_title1"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/text_content1"
                android:focusableInTouchMode="false"
                android:gravity="left|top"
                android:lineSpacingExtra="2.06dp"
                android:inputType="textMultiLine"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_layout3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/sub_title3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/sub_title3"
                android:gravity="center_vertical"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/content3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/text_content2"
                android:focusableInTouchMode="false"
                android:gravity="left|top"
                android:lineSpacingExtra="2.06dp"
                android:inputType="textMultiLine"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>