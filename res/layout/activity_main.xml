<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="257dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp" >

        <LinearLayout
            android:layout_width="128.5dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="5dp"
                android:background="@drawable/image_border"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="67dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="#7A380E"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="#7A380E"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/sum_of_my_article"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="#7A380E"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sum_of_upload_article"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="#7A380E"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receive_recommend_count"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="#7A380E"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/update_information"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@drawable/update_user_info_btn_selector" />

                <Button
                    android:id="@+id/facebook_logout_x_btn"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/facebook_logout_x_btn_selector" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="257dp"
        android:layout_height="195dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="128.5dp"
                android:layout_height="match_parent"
                android:gravity="center" >

                <Button
                    android:id="@+id/write_article_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/write_article_selector" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/write_article_btn"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="기사쓰기"
                    android:textColor="#7A380E"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="128.5dp"
                android:layout_height="match_parent"
                android:gravity="center" >

                <Button
                    android:id="@+id/read_my_article_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/read_article_selector" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/read_my_article_btn"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="신문읽기"
                    android:textColor="#7A380E"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="128.5dp"
                android:layout_height="match_parent"
                android:gravity="center" >

                <Button
                    android:id="@+id/share_article_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/share_article_selector" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/share_article_btn"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="신문공유"
                    android:textColor="#7A380E"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="128.5dp"
                android:layout_height="match_parent"
                android:gravity="center" >

                <Button
                    android:id="@+id/upload_facebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/facebook_marker_selector" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/upload_facebook"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="페북공유"
                    android:textColor="#7A380E"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>