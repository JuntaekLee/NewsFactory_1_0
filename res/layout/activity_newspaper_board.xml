<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board_back"
    android:orientation="vertical" >

    <Button
        android:id="@+id/facebook_login_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:background="@drawable/facebook_login_btn" />

    <Button
        android:id="@+id/upload_article_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="2dp"
        android:background="@drawable/upload_btn_selector" />

    <RadioGroup
        android:id="@+id/category_group"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <RadioButton
            android:id="@+id/general_article_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:button="@drawable/general_category_selector" />

        <RadioButton
            android:id="@+id/entertainment_article_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:button="@drawable/entertainment_category_selector" />

        <RadioButton
            android:id="@+id/sport_article_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:button="@drawable/sport_category_selector" />

        <RadioButton
            android:id="@+id/column_article_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:button="@drawable/column_category_selector" />

        <RadioButton
            android:id="@+id/fun_article_btn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:button="@drawable/fun_category_selector" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/article_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:paddingTop="3dp" >

            <LinearLayout
                android:id="@+id/article_rank1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/article_rank1_image"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/article_rank1_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#5F2400"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/article_rank2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/article_rank2_image"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/article_rank2_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#5F2400"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/article_rank3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/article_rank3_image"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/article_rank3_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#5F2400"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/normal_article_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="245dp" >

            <ListView
                android:id="@+id/article_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="#ffffff"
                android:dividerHeight="0px" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/previous_page"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/previous_page_btn_selector"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selected_page"
                android:text="1"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="2"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="3"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn4"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="4"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn5"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="5"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn6"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="6"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn7"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="7"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn8"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="8"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/page_btn9"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:text="9"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/next_page"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/next_page_btn_selector"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>